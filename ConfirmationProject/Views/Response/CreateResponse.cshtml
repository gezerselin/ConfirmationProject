@model Survey
@{
    ViewData["Title"] = "CreateResponse";
}

@{
    int UserId = Convert.ToInt32(User.Identity.Name);
    double oran = ((double)Model.numberOfYes / (double)Model.numberOfConfirmation) * 100;

}

<form method="post" asp-action="AddResponse" asp-controller="Response" asp-route-surveyid="@Model.Id" asp-route-userid="@UserId">
  
        <div class="form-group">
            <h3>@Model.Title</h3>
        </div>
        <div class="form-group">
            <p>@Model.Detail</p>
        </div>
        <div class="form-group">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="yes">
                <label class="form-check-label" for="inlineRadio1">Evet</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="no">
                <label class="form-check-label" for="inlineRadio2">Hayır</label>
            </div>
        </div>
        <div class="form-group">
            <label>Notunuz varsa iletebilirsiniz :)</label>
            <input type="text" name="note" class="form-control" />
        </div>
   
    <div >
       
        <button type="submit" class="btn btn-primary">Yanıt Ver</button>
    </div>
</form>