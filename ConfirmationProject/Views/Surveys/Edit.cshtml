
@model ConfirmationProject.Models.Survey

@{
    Layout = "_Layout2";
    ViewData["Title"] = "Edit";
}



<h4>Anket Düzenleme</h4>
<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Detail" class="control-label"></label>
                <input asp-for="Detail" class="form-control" />
                <span asp-validation-for="Detail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numberOfConfirmation" class="control-label"></label>
                <input asp-for="numberOfConfirmation" class="form-control" />
                <span asp-validation-for="numberOfConfirmation" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="numberOfYes" />

            </div>
            <div class="form-group">

                <input type="hidden" asp-for="numberOfNo" />
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="CreatorId" />
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
             
                <input type="hidden" asp-for="CreationDate" />
            </div>
            <div class="form-group">
                <input type="button" id="buttonEditSurvey" value="Düzenle" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

<div>
    <a asp-action="Index">Anketler Sayfasına Dön</a>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#buttonEditSurvey').on('click', function () {
                var sendingData = {
                    Id: $('#Id').val(),
                    Title: $('#Title').val(),
                    Detail: $('#Detail').val(),
                    numberOfConfirmation: $('#numberOfConfirmation').val(),
                    numberOfYes: $('#numberOfYes').val(),
                    numberOfNo: $('#numberOfNo').val(),
                    CreatorId: $('#CreatorId').val(),
                    Deadline: $('#Deadline').val()

                }
                $.ajax({
                    url: '/Surveys/Edit',
                    type: 'POST',
                    data: sendingData,
                    success: function (data) {
                        console.log('başarılı')
                        alertify.alert(data, function () {
                            location = '/Surveys/Index'
                        });
                    },
                    error: function (err) {
                        console.log(err.statusText);
                    }


                })
            });

        })
    </script>
}


